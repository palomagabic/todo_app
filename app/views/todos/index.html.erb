<div class="card">
  <div class="card-body">

        <h1>Descripciones</h1>

        <table class="table">
        <thead>
            <tr>
            <th>Description</th>
            <th>Completed</th>
            <th>Fecha de creacion</th>
            <th>Mostrar</th>
            <th>Editar</th>
            <th>Eliminar</th>
            <th>Completado</th>

            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @todos.each do |todo| %>
            <tr>
                <td><%= todo.description %></td>
                <td><%= todo.completed %></td>
                <td><%= todo.created_at %></td>
                <td><%= link_to "Show", todo_path(todo)%></td>
                <td><%= link_to "Edit", edit_path(todo)%></td>
                <td><%= link_to "Eliminar", todo, method: :delete %></td>
                <td><%= link_to "Completado", complete_path(todo) %></td>
            </tr>
            <% end %>
        </tbody>
        </table>
  </div>
</div>

<%= link_to  'Crear todo', todos_new_path %>
</br>
<%= link_to  'Listar', todos_lista_path %>
