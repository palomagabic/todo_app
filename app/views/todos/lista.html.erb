<div class="row">
  <div class="col-sm-6">

        <h1>Lista no completados</h1>

        <table class="table">
        <thead>
            <tr>
            <th>Description</th>
            <th>Completed</th>
            <th>Fecha de creacion</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
        <%  @todos.each do |t| %>

          <% if t.completed == false %>
            <tr>
                <td><%= t.description %></td>
                <td><%= t.completed %></td>
                <td><%= t.created_at %></td>
            </tr>
          <% end %>
        <% end %>

        </tbody>
        </table>
  </div>
  <div class="col-sm-6">

        <h1>Lista completados</h1>

        <table class="table">
        <thead>
            <tr>
            <th>Description</th>
            <th>Completed</th>
            <th>Fecha de creacion</th>
            <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
        <%  @todos.each do |t| %>

          <% if t.completed == true %>
            <tr>
                <td><%= t.description %></td>
                <td><%= t.completed %></td>
                <td><%= t.created_at %></td>
            </tr>
          <% end %>
        <% end %>

        </tbody>
        </table>
  </div>


</div>
